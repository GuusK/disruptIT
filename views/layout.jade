doctype html
html(lang=locale)
  head
    title= title
    link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css')
    script(src='//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js')
    script(src='//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.11.1/jquery.validate.min.js')
  body
    .navbar.navbar-inverse.navbar-static-top(role='navigation')
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only=__('Toggle navigation')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') AnonymIT
        .collapse.navbar-collapse
          ul.nav.navbar-nav
            li.active
              a(href='/')=__('Home')
            if user
              li
                a(href='/logout')=__('Logout')
            else
              li
                a(href='/login')=__('Login')
              li
                a(href='/signup')=__('Signup')
          ul.nav.navbar-nav.navbar-right
            li
              a(href='?locale=en' hreflang='en')
                img(src='images/flags/gb.png')
            li
              a(href='?locale=nl' hreflang='nl')
                img(src='images/flags/nl.png')


    .container
      if messages.error
        .alert.alert-danger
          div= messages.error
      if messages.info
        .alert.alert-info
          div= messages.info
      if messages.success
        .alert.alert-success
          div= messages.success
      block content

