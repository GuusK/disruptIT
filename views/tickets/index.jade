mixin ticket(ticket)
  if ticket
    .ticket
      div.content
        h2= t('ticket.header')
        != t('ticket.text', { postProcess: 'jade' })
        div.block
          label= t('ticket.activationcode')
          strong #{ticket._id}

        if ticket.ownedBy
          div.block
            label= t('ticket.visitor')
            strong= ucfirst(user.firstname) + ' ' + user.surname

        
        div.footer
          span.time= t('ticket.time')
          span= t('ticket.date')

        img(src="/tickets/#{ticket._id}/barcode", width=220, height=25)

      div.aside
        div

      br(clear='all')

extends layout
block content
  - for (var i = 0, x = 4; i < tickets.length; i += x)
    div
     - for (var j = 0; j < x; j++)
      +ticket(tickets[i+j])
    footer
