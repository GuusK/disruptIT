      p {
      padding: 0;
      margin: 5px 0 15px 0;
      }

      div.block {
        float: right;
        width: 50%;
        margin-bottom: 30px;
      }

      label {
        display: block;
        font-size: 1em;
      }

      label + strong {
        font-size: 1.25em;
      }

      @media print {
        footer {
          page-break-after: always !important;
        }

        .ticket {
          outline: none;
        }
        .ticket::before, .ticket::after {
          content: '';
          display: block;
          width: 15px;
          height: 15px;
          border-bottom: 1px solid #ccc;
          border-right: 1px solid #ccc;
          position: absolute;
          top: -15px;
          left: -15px;
        }
        .ticket::before {
          border-top: 1px solid #ccc;
          border-bottom: none;
          bottom: -17px;
          top: auto;
        }
      }

