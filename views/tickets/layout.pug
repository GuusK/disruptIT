doctype html

html
  head
    link(href='https://fonts.googleapis.com/css?family=Open+Sans:400,400italic,600,700', rel='stylesheet', type='text/css')

    style.
      @font-face {
        font-family: 'Glacial Indifference';
        src: url('/fonts/GlacialIndifference-Italic.eot');
        src: local('Glacial Indifference Italic'), local('GlacialIndifference-Italic'),
          url('/fonts/GlacialIndifference-Italic.eot?#iefix') format('embedded-opentype'),
          url('/fonts/GlacialIndifference-Italic.woff') format('woff'),
          url('/fonts/GlacialIndifference-Italic.ttf') format('truetype'),
          url('/fonts/GlacialIndifference-Italic.svg#GlacialIndifference-Italic') format('svg');
        font-weight: normal;
        font-style: italic;
      }

      @font-face {
        font-family: 'Glacial Indifference';
        src: url('/fonts/GlacialIndifference-Regular.eot');
        src: local('Glacial Indifference Regular'), local('GlacialIndifference-Regular'),
          url('/fonts/GlacialIndifference-Regular.eot?#iefix') format('embedded-opentype'),
          url('/fonts/GlacialIndifference-Regular.woff') format('woff'),
          url('/fonts/GlacialIndifference-Regular.ttf') format('truetype'),
          url('/fonts/GlacialIndifference-Regular.svg#GlacialIndifference-Regular') format('svg');
        font-weight: normal;
        font-style: normal;
      }

      @font-face {
        font-family: 'Glacial Indifference';
        src: url('/fonts/GlacialIndifference-Bold.eot');
        src: local('Glacial Indifference-Bold'), local('GlacialIndifference-Bold'),
          url('/fonts/GlacialIndifference-Bold.eot?#iefix') format('embedded-opentype'),
          url('/fonts/GlacialIndifference-Bold.woff') format('woff'),
          url('/fonts/GlacialIndifference-Bold.ttf') format('truetype'),
          url('/fonts/GlacialIndifference-Bold.svg#GlacialIndifference-Bold') format('svg');
        font-weight: bold;
        font-style: normal;
      }
      body {
        font-family: 'Glacial Indifference', "Raleway", "HelveticaNeue", "Helvetica Neue", Helvetica, Arial, sans-serif !important;
        font-size: 1rem;
        color: #555;
        margin: 20px;
      }

      h2 {
        margin: 0;
        padding: 0;
        font-weight: normal;
        font-size: 1.75em;
        color: #00bab3;
      }
      html { 
          font-size: 100%; 
          -webkit-text-size-adjust: 100%; 
          -ms-text-size-adjust: 100%; 
          height: 100%;
          -webkit-text-size-adjust: 100%;
          -ms-text-size-adjust: 100%;
          -webkit-font-smoothing: antialiased;
          text-rendering: optimizeLegibility;
      }

      u, strong {
        color: #00bab3;
      }

      .ticket {
        width: 550px;
        margin: 1px 0 0;
        padding: 0;
        outline: 1px dashed rgba(185,185,185,1);
        position: relative;
      }

      .ticket img {
        display: block;
        float: right;
        margin-top: -10px;
      }

      div.footer {
        position: absolute;
        bottom: 9px;

      }
      span.time {
        padding: 3px 5px;
        font-size: 1.1em;
        margin: 0px 10px;
        -webkit-print-color-adjust: exact;
      }
      span.time +span {
        font-weight: 600;
        color: #00bab3;
      }

      .ticket .content {
        float: left;
        padding: 15px;
        width: 400px;
      }

      .ticket .aside {
        float: right;
        height: 245px;
        margin: 0 -1px -1px 0;
        width: 115px;
        background-color: #00bab3;
        -webkit-print-color-adjust: exact;
        position: relative;
        z-index: 2;
      }

      .ticket .aside > div {
        background: url(/images/logo.svg);
        background-size: 80px 72px;
        width: 80px;
        height: 60px;
        position: absolute;
        top: 13px; 
        right:14px;
        -webkit-print-color-adjust: exact;
      }
      .ticket.ophaal {
        width: 315px;
      }
      .ticket.ophaal:nth-of-type(2n){
        position: absolute;
        left: 330px;
        margin-top: -166px;
      }
      .ticket.ophaal .content {
        width: 200px;
      }
      .ticket.ophaal .aside {
        height: 167px;
      }
      .ticket.ophaal .footer {
        text-align: center;
      }
      .ticket.ophaal .footer .time {
        font-family: 'Open Sans', sans-serif;
        font-weight: bold;
        font-size: 18px;
      }


