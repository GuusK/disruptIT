doctype html

html
  head
    style.
      @font-face {
          font-family: 'jaapokkiregular';
          src: url('/fonts/jaapokki-regular-webfont.eot');
          src: url('/fonts/jaapokki-regular-webfont.eot?#iefix') format('embedded-opentype'),
               url('/fonts/jaapokki-regular-webfont.woff2') format('woff2'),
               url('/fonts/jaapokki-regular-webfont.woff') format('woff'),
               url('/fonts/jaapokki-regular-webfont.ttf') format('truetype'),
               url('/fonts/jaapokki-regular-webfont.svg#jaapokkiregular') format('svg');
          font-weight: normal;
          font-style: normal;

      }
      @import url(//fonts.googleapis.com/css?family=Open+Sans:400,300,700,400italic);

      h2 {
        margin: 0;
        padding: 0;
        font-family: 'jaapokkiregular';
        font-weight: normal;
        font-size: 1.75em;
        color: #2f63c6;
        text-transform: uppercase;
      }
      html { 
          font-size: 100%; 
          -webkit-text-size-adjust: 100%; 
          -ms-text-size-adjust: 100%; 
          height: 100%;
          -webkit-text-size-adjust: 100%;
          -ms-text-size-adjust: 100%;
          -webkit-font-smoothing: antialiased;
          text-rendering: optimizeLegibility;
      }
      body {
        font-family: "Open Sans";
        font-size: 12px;
        margin: 20px;
        color: #555;
      }

      u, strong {
        color: #2f63c6;
      }

      .ticket {
        width: 550px;
        margin: 1px 0 0;
        padding: 0;
        outline: 1px dashed rgba(185,185,185,1);
        position: relative;
      }

      .ticket img {
        display: block;
        float: right;
        opacity: 0.7;
      }

      div.footer {
      position: absolute;
      bottom: 18px;

      }
      span.time {
        background: #2f63c6;
        color: white;
        padding: 3px 5px;
        font-size: 1.1em;
        margin-right: 10px;
        font-family: 'jaapokkiregular';
        -webkit-print-color-adjust: exact;
      }
      span.time +span {
        font-weight: 600;
        color: #2f63c6;
      }

      .ticket .content {
        float: left;
        padding: 15px;
        width: 430px;
      }

      .ticket .aside {
        float: right;
        height: 222px;
        margin: 0 -1px -1px 0;
        width: 85px;
        background-image: linear-gradient(45deg, #523fda 10%, #2f63c6 35%, #0d90b1 90%) !important; 
        -webkit-print-color-adjust: exact;
        position: relative;
        z-index: 2;
      }
      .ticket:first-of-type .aside { 
        margin-top: -1px;
      }

      .ticket .aside > div {
        background: url(/images/logo.png);
        background-size: 80px 72px;
        width: 68px;
        height: 60px;
        position: absolute;
        top: 13px; 
        right:14px;
        -webkit-print-color-adjust: exact;
      }

