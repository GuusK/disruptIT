extends layout
block nav
  - var selected = 'login'
block title
  title Login
block content
  .row
    .col-md-offset-3.col-md-6
      h1=__('Inloggen')
      form#login-form(method='POST')
        legend(hidden)=__('Inloggen')
        .form-group
          label(for='email')= __('E-mail')
          input.form-control(required, type='text', name='email', autofocus)
        .form-group
          label(for='password')=__('Wachtwoord')
          input.form-control(required, type='password', name='password')
        button#login-btn.btn.btn-primary(type='submit')= __('Inloggen')  
        a.btn.btn-link(href='/forgot')=__('Wachtwoord vergeten?')
        a.btn.btn-link(href='/register')=__('Registreren?')