extends ../layout

block content
  section.main.style1.talks
    .container
      .row(class='0%')
        h2= t('talks.header')
      
      if speakers.length === 0
        p= t('talks.nospeakers')  
      else
      - for (var i = 0, x = 2; i < speakers.length; i += x)
        .row(class='spaced 200%')
         - for (var j = 0; j < x; j++)
          if speaker = speakers[i+j]
            .6u(class='12u$(medium)')
              span.image.right
                img.avatar(src=speaker.image)

              header
                h3= speaker.name
                p= speaker.company
              p.small= t('speakers.' + hypenate(speaker.name))
              a.tile(href='/speakers/' + hypenate(speaker.talk))
                span
                span
                  b= speaker.talk
  

      h2= t('talks.presenter')

      .row(class='spaced 200%')
        .6u(class='12u$(medium)')
          span.image.left
            img.avatar(src='/images/arnosiebes.jpg')

          header
            h3 Arno Siebes
