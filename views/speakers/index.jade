extends ../layout

block content
  section.main.style1.talks
    .container
      .row(class='0%')
        h2= t('talks.header')
      
      if speakers.length === 0
        p= t('talks.nospeakers')  
      else
      - for (var i = 0, x = 2; i < speakers.length; i += x)
        .row(class='spaced 200%')
         - for (var j = 0; j < x; j++)
          if speaker = speakers[i+j]
            .6u(class='12u$(medium)')
              span.image.right
                img.avatar(src=speaker.image)

              header
                if speaker.language == 'en'
                  h3
                    = speaker.name
                    span.flag-icon.flag-icon-gb(style='margin-left:10px; font-size: 14px;')

                if speaker.language == 'nl'
                  h3
                    = speaker.name
                    span.flag-icon.flag-icon-nl(style='margin-left:10px; font-size: 14px;')
                p= speaker.company
              p.small= t('speakers.' + hypenate(speaker.name))
              a.button.small.special(style='float: right;margin: -20px 0 70px 0;', href='./speakers/' + hypenate(speaker.talk))= t('speakers.talk') + speaker.talk + '  Â»'
                span
                span
                  b
  

      h2= t('talks.presenter')

      if presenters.length === 0
          p= t('talks.nopresenters')  
        else
        - for (var i = 0, x = 2; i < presenters.length; i += x)
          .row(class='spaced 200%')
           - for (var j = 0; j < x; j++)
            if presenter = presenters[i+j]
              .6u(class='12u$(medium)')
                span.image.left
                  img.avatar(src=presenter.image)

                header
                  h3= presenter.name
                  p= presenter.company
                p.small= t('presenters.' + hypenate(presenter.name))