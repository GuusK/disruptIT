mixin nametag(user)
  if user
    .ticket.ophaal
      div.content
        if user.surname == 'Tiel Groenestege'
          h2(style='font-size: 20px')= ucfirst(user.firstname) + ' ' + user.surname
          p=  verenigingen[user.vereniging].name
        else
          h2= ucfirst(user.firstname) + ' ' + user.surname
          p=  verenigingen[user.vereniging].name
      div.aside
        div
      br(clear='all')



doctype html
html
  head
    style.
      @font-face {
        font-family: 'jaapokkiregular';
        src: url('/fonts/jaapokki-regular-webfont.eot');
        src: url('/fonts/jaapokki-regular-webfont.eot?#iefix') format('embedded-opentype'),
        url('/fonts/jaapokki-regular-webfont.woff2') format('woff2'),
        url('/fonts/jaapokki-regular-webfont.woff') format('woff'),
        url('/fonts/jaapokki-regular-webfont.ttf') format('truetype'),
        url('/fonts/jaapokki-regular-webfont.svg#jaapokkiregular') format('svg');
        font-weight: normal;
        font-style: normal;
      }

      @import url(//fonts.googleapis.com/css?family=Open+Sans:400,300,700,400italic);

      @page {
        size: A4;
        margin: 0;
      }

      h2 {
        margin: 2% 0 0 0;
        padding: 0;
        font-family: 'jaapokkiregular';
        font-weight: normal;
        font-size: 22px;
        color: #2f63c6;
        text-transform: uppercase;
      }

      h2 + p {
        margin-top: 0px;
        font-style: italic;
        font-size: 17px;
        color: #999 !important;
        -webkit-print-color-adjust: exact;
      }

      html {
        width: 210mm;
        height: 297mm;
        font-size: 100%;
        -webkit-text-size-adjust: 100%;
        -ms-text-size-adjust: 100%;
        height: 100%;
        -webkit-text-size-adjust: 100%;
        -ms-text-size-adjust: 100%;
        -webkit-font-smoothing: antialiased;
        text-rendering: optimizeLegibility;
      }

      body {
        font-family: "Open Sans";
        font-size: 12px;
        margin: 20px;
        width: calc(210mm - 40px);
        height: calc(297mm - 40px);
        color: #555;
      }

      u, strong {
        color: #2f63c6;
      }

      .ticket {
        width: 90mm;
        margin: 1px 0 0;
        padding: 0;
        outline: 1px dashed rgba(185, 185, 185, 1);
        position: relative;
      }

      .ticket img {
        display: block;
        float: right;
        opacity: 0.7;
      }

      div.footer {
        position: absolute;
        bottom: 18px;
      }

      span.time {
        background: #2f63c6;
        color: white;
        padding: 3px 5px;
        font-size: 1.1em;
        margin-right: 10px;
        font-family: 'jaapokkiregular';
        -webkit-print-color-adjust: exact;
      }

      span.time + span {
        font-weight: 600;
        color: #2f63c6;
      }

      .ticket .content {
        float: left;
        padding: 22px;
        width: 90mm !important;
        position: absolute;
      }

      .ticket .aside {
        float: right;
        height: 57mm;
        margin: 0 -1px -1px 0;
        width: 85px;
        position: relative;
        z-index: 2;
      }

      .ticket .aside > div {
        background: url(/images/logo2.png);
        background-size: 80px 72px;
        width: 68px;
        height: 55px;
        position: absolute;
        bottom: 13px;
        right: 14px;
        -webkit-print-color-adjust: exact;
      }

      .ticket.ophaal:nth-of-type(2n) {
        position: absolute;
        left: 95.5mm;
        margin-top: calc(-57mm + 1px);
      }

      .ticket.ophaal .content {
        width: 200px;
      }

      .ticket.ophaal .footer {
        text-align: center;
      }

      .ticket.ophaal .footer .time {
        font-family: 'Open Sans', sans-serif;
        font-weight: bold;
        font-size: 18px;
      }

      p {
        padding: 0;
        margin: 5px 0 15px 0;
      }

      div.block {
        float: right;
        width: 50%;
        margin-bottom: 30px;
      }

      label {
        display: block;
        text-transform: uppercase;
        font-size: 0.75em;
      }

      label + strong {
        font-size: 1.25em;
      }

      @media print {
        footer {
          page-break-after: always !important;
        }

        .ticket {
          outline: none;
        }

        .ticket::before, .ticket::after {
          content: '';
          display: block;
          width: 15px;
          height: 15px;
          border-bottom: 1px solid #ccc;
          border-right: 1px solid #ccc;
          position: absolute;
          top: -15px;
          left: -15px;
        }

        .ticket::before {
          border-top: 1px solid #ccc;
          border-bottom: none;
          bottom: -17px;
          top: auto;
        }
      }
  body

    - for (var i = 0, x = 10; i < users.length; i += x)
      div
        - for (var j = 0; j < x; j++)
          +nametag(users[i + j])
      footer
