extends layout

block content
  form#signup(method='POST')
    legend Signup
    .form-group
      label(for='email')= __('Email')
      input.form-control(type='text', name='email', autofocus)
    .form-group
      label(for='password')= __('Password')
      input.form-control(type='password', name='password')
    .form-group
      label(for='confirm')= __('Confirm Password')
      input.form-control(type='password', name='confirm')
    button.btn.btn-primary(type='submit')= __('Signup')
  script
