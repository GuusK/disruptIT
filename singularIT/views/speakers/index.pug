extends ../layout

mixin session(speaker, count)
  if speaker
    .session
      h3!= speaker.name
      if speaker.company
        h5(class=speaker.id)!= speaker.company
      else
        p(class=speaker.id)
      if speaker.image
        img(src=speaker.image class="speaker-image")
      if speaker.special
        p(class="speaker-page-p")!= speaker.special
      if speaker.subject
        if speakers.talk
          if speakers.talk.length != 0
            h2 Subject
        h5!= speaker.subject
      if speaker.talk
        .shorten
          each part in speaker.talk
            p(class="speaker-page-p")!= part
      if speaker.bio && speaker.bio.length != 0
        h5 Biography
        .shorten
          each part in speaker.bio
            p(class="speaker-page-p")!= part
      if speaker.limit - count == 0
        p(style={color:'#C8102E'}) This session is already full
      else 
        if speaker.limit - count < 50
          p(style={color:'#C8102E'}) There are only #{speaker.limit - count} seats left
    hr

block above-content

block content
  section.intro.slanted
    .content
      h3 Hosts
      hr
      .timetable
        each presenter in presenters
          +session(presenter)

      h3 Speakers
      each speaker in speakers
        +session(speaker)
